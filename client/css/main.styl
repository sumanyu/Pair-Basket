@import 'utility'

*
	font-family: 'Pt Sans' !important

html
	height: 100%

body
	_margin-top = 80px

	_yellow = #FFDC00
	_dark_yellow = #FFBB00
	_light_gray = #D7D7D7
	_medium_gray = #E7E7E7
	_dark_gray = #636363

	_red = #F22C1E
	_blue = #3276B1

	// z-index
	// layer 1: pop-up 100
	// layer 2: overlay 90
	// layer 3: header 80

	height: 100%

	textarea
		resize: none

	.yellow-button
		set-background(_yellow)
		color: black

	.red-button
		set-background(_red)
		color: black

	.blue-button
		set-background(_blue)
		color: white

	.yellow-button, .yellow-button-disabled, .red-button, .red-button-disabled, .blue-button
		border-radius(5px)
		display: block
		animate-transition()

	.yellow-button-disabled, .red-button-disabled
		opacity: 0.75

	.yellow-button:hover, .red-button:hover, .blue-button:hover
		opacity: 0.7
		cursor: pointer
		animate-transition()

	.overlay
		opacity: 0.7
		background: black
		width: 100%
		height: 100%
		z-index: 90
		top: 0
		left: 0
		position: fixed

	.popup
		h = 400px
		w = 400px
		pad = 25px

		display: block
		position: fixed
		top: 50%
		left: 50%
		width: w
		margin-top: -(h/2)
		margin-left: -(w/2)
		z-index: 100
		background: white
		border-radius(10px)
		border: 3px solid _light_gray

		.close-popup-button
			position: absolute
			top: 5px
			right: 10px

		.container
			width: h - pad
			padding: pad 20px pad 20px

		p
			text-align: justify

	.header-fixed
		position: fixed !important
		background-color: _yellow
		box-shadow(0px 1px 15px _dark_gray)

	.header-landing
